function palidrome(str) {

    let value =  false;
    function trueOrFalce() {
        for (let i = 0; i < str.length / 2; i++) {
            if (str[i] === str[str.length - i - 1]){
                value = true;
            } else{
                value = false;
            }
        }
    }
    trueOrFalce();
    console.log(value);
}
palidrome('haha')