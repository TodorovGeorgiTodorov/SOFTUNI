function evenPositionElement(arr) {

    function even(arr) {
        let result = [];
        for (let i = 0; i <= arr.length ; i++) {
            if (i % 2 === 0){
                result.push(arr[i]);
            }
        }
        return result;
    }

    console.log(even(arr).join(' '));

}
evenPositionElement(['5', '10']);